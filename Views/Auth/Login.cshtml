
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<div style="position: fixed; left: 0px; right: 0px; bottom: 0px; top: 0px; margin: auto; border: 1px solid beige; width: 400px; height: 500px; background: cornsilk;">
    <div style="position: absolute; left: 0px; right: 0px; bottom: 0px; top: 0px; margin: auto; width: 350px; height: 450px">
        <h3 style="text-align: center;">Login</h3>
        <h4 style="text-align: center;color:#808080">Have an account?</h4>
        @*<input style="width:98%; height:30px;" placeholder="User Name" /><br />
        <input style="width:98%; height:30px;margin-top:2px" placeholder="Password" />
        <input type="submit" value="Log In" style="width:100%; height:30px;margin-top:2px"/>*@
        <form method="post" action="@Url.Action("DoLogin","Auth")">
            <div class="mb-3">
                <label for="txtUserName" class="form-label">User Name</label>
                <input type="text" class="form-control" id="txtUserName" aria-describedby="emailHelp" name="txtUserName">
                @*<div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>*@
            </div>
            <div class="mb-3">
                <label for="txtPassword" class="form-label">Password</label>
                <input type="password" class="form-control" id="txtPassword" name="txtPassword">
            </div>
            <button type="submit" class="btn btn-primary" style="width:100%">Submit</button>
            <div id="emailHelp" class="form-text">@ViewBag.Message</div>
        </form>
        <div style="color:blue">@Html.ActionLink("Forget Password", "ResetPassword", "Auth", new { area = "" })</div>

        @*Reset password section*@
        @*<form method="post" action="@Url.Action("Reset","Auth")">
            <h4 style="text-align: center;color:#808080;margin:4px;font-size:12px">Forget Password?</h4>
            <button type="submit" onclick="window.location.href='../Views/Auth/ResetPassword.cshtml'" class="btn btn-primary" style="width:100%">Reset Password</button>

        </form>*@
    </div>
</div>

